<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %msg%n" />
        </Console>
        <RollingFile name="InfoFile" fileName="log/diasUiCucumber.log"
                     filePattern="${logPath}/%d{YYYYMMddHHmmss}-fargo.log">
            <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %msg%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>
        <RollingFile name="ErrorFile" fileName="log/Error.txt"
                     filePattern="${logPath}/%d{YYYYMMddHHmmss}-error.log">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %msg%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>
        <RollingFile name="SearchResults" fileName="log/result.txt"
                     filePattern="${logPath}/%d{YYYYMMddHHmmss}-myclass.log">
            <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %msg%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="steps.SearchSteps" level="info">
            <AppenderRef ref="SearchResults" />
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console" level="info" />
            <AppenderRef ref="InfoFile" level="info" />
            <AppenderRef ref="ErrorFile" level="error" />
        </Root>
    </Loggers>
</Configuration>
